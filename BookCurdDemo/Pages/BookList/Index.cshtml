@page
@model BookCurdDemo.Pages.BookList.IndexModel
@{

}

<h2>@Model.HelloMessage</h2>
@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<form method="post">

    @if (Model.Books.Count() > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)</th>
                    <th>@Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Books)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Author)</td>
                        <td>@Html.DisplayFor(m => item.ISBN)</td>
                        <td><button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button></td>
                        <td><a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div>No books in database</div>
    }
</form>
<br />
<br />
<a asp-page="Create" class="btn btn-primary">Create New Book</a>


